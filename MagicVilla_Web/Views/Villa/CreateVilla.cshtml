@model MagicVilla_Web.Models.DTO.VillaCreateDTO

<form asp-action="CreateVilla">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Create Villa</h1>
        <hr />
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-2">
                <label asp-for="Name" class="form-control-label" style="font-size: 20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="Details" class="form-control-label pt-2" style="font-size: 20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Details" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Details" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="Rate" class="form-control-label" style="font-size: 20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Rate" class="form-control" />
                <span asp-validation-for="Rate" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="SqrMt" class="form-control-label" style="font-size: 20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="SqrMt" class="form-control" />
                <span asp-validation-for="SqrMt" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="Occupancy" class="form-control-label" style="font-size: 20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Occupancy" class="form-control" />
                <span asp-validation-for="Occupancy" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="ImageUrl" class="form-control-label" style="font-size: 20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="Amenity" class="form-control-label pt-2" style="font-size: 20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Amenity" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Amenity" class="text-danger"></span>
            </div>

            <div class="col-5 offset-2">
                <input type="submit" value="Create" class="btn btn-success form-control" />
            </div>
            <div class="col-5 ">
                <a asp-action="IndexVilla" class="btn btn-primary form-control">Back</a>
            </div>
        </div>
    </div>
</form>

<!--Call "asp-validation-for" scripts-->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}